<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_back"
    android:padding="@dimen/px20">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_margin="@dimen/px30"
        android:textSize="@dimen/px22"
        android:text="您是否确认删除？"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_dialog_button"
            android:onClick="doClick"
            android:focusable="true"
            android:paddingLeft="@dimen/px40"
            android:paddingRight="@dimen/px40"
            android:paddingTop="@dimen/px10"
            android:paddingBottom="@dimen/px10"
            android:gravity="center"
            android:layout_marginRight="@dimen/px10"
            android:textSize="@dimen/px22"
            android:textColor="@android:color/white"
            android:text="确认"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_dialog_button"
            android:onClick="doClick"
            android:focusable="true"
            android:paddingLeft="@dimen/px40"
            android:paddingRight="@dimen/px40"
            android:paddingTop="@dimen/px10"
            android:paddingBottom="@dimen/px10"
            android:gravity="center"
            android:layout_marginLeft="@dimen/px10"
            android:textSize="@dimen/px22"
            android:textColor="@android:color/white"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>
</layout>