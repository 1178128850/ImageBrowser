<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px80"
        android:layout_marginBottom="@dimen/px15"
        android:padding="@dimen/px10"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menu_bk"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bt_startHDP"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/button_picplay"
            android:focusable="true"
            android:onClick="doClick"/>
        <ImageView
            android:id="@+id/bt_rotate_left"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/px80"
            android:background="@drawable/button_left_rotation"
            android:focusable="true"
            android:onClick="doClick"/>
        <ImageView
            android:id="@+id/bt_rotate_right"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/px80"
            android:background="@drawable/button_right_rotation"
            android:focusable="true"
            android:onClick="doClick"/>
        <ImageView
            android:id="@+id/bt_delete"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/px80"
            android:background="@drawable/button_del"
            android:focusable="true"
            android:onClick="doClick"/>
    </LinearLayout>
</RelativeLayout>
</layout>